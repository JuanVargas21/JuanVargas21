@page "/clientes"
@using Anun.WEB.Repositories
@using Anun.SHARED.Entities
@using Anun.WEB.Shared
@using Anun.WEB

@inject IRepository repository
@inject NavigationManager navigationManager
@inject SweetAlertService swal

<h1>ClientesIndex</h1>

@if (Clientes is null)
{
    <div class="spinner" />
}
else
{
    <GenericList MyList="Clientes">
        <Body>
            <div class="card">
                <div class="card-header">
                    <span>
                        <i class="oi oi-person"></i> Clientes
                        <a class="btn btn-sm btn-primary float-end" href="/Clientes/create"><i class="oi oi-plus"></i> Crear Cliente</a>
                    </span>
                </div>
                <div class="card-body">
                    <div class="mb-2" style="display: flex; flex-wrap: wrap; align-items: center;">
                    </div>
                </div>
            </div>
            <table class="table table-striped">
                <thead>
                    <tr>
                        <th>Nombre</th>
                        <th>Dirección</th>
                        <th>Teléfono</th>
                        <th>Email</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var cliente in Clientes!)
                    {
                        <tr>
                            <td>@cliente.Nombrecompleto</td>
                            <td>@cliente.Direccion</td>
                            <td>@cliente.Telefono</td>
                            <td>@cliente.email</td>
                            <td>
                                <a href="/Clientes/edit/@cliente.Id" class="btn btn-warning btn-sm"><i class="oi oi-pencil" /> Editar</a>
                                <button class="btn btn-danger btn-sm" @onclick=@(() => DeleteAsync(cliente))><i class="oi oi-trash" /> Borrar</button>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </Body>
    </GenericList>
}

@code {
    public List<Cliente> Clientes { get; set; }

    protected async override Task OnInitializedAsync()
    {
        await Load();
    }

    private async Task Load()
    {
        var responseHppt = await repository.GetAsync<List<Cliente>>("/api/clientes");
        Clientes = responseHppt.Response!;
    }

    private async Task DeleteAsync(Cliente cliente)
    {
        var result = await swal.FireAsync(new SweetAlertOptions
            {
                Title = "Confirmación",
                Text = "¿Está seguro de que quiere borrar el cliente?",
                Icon = SweetAlertIcon.Question,
                ShowCancelButton = true
            });

        var confirm = string.IsNullOrEmpty(result.Value);

        if (confirm)
        {
            return;
        }

        var responseHTTP = await repository.DeleteAsync<Cliente>($"api/clientes/{cliente.Id}");

        if (responseHTTP.Error)
        {
            if (responseHTTP.HttpResponseMessage.StatusCode == System.Net.HttpStatusCode.NotFound)
            {
                navigationManager.NavigateTo("/");
            }
            else
            {
                var mensajeError = await responseHTTP.GetErrorMessageAsync();
                await swal.FireAsync("Error", mensajeError, SweetAlertIcon.Error);
            }
        }
        else
        {
            await Load();
        }
    }
}

