@page "/web/edit/{id:int}"
@using Anun.WEB.Repositories
@inject NavigationManager navigationManager
@inject IRepository repository
@inject SweetAlertService swal

<h3>Edit Web</h3>

@if (Web == null)
{
    <p>Cargando...</p>
}
else
{
    <WebForm @ref="WebForm" Web="Web" OnSubmit="Edit" ReturnAction="Return" />
}

@code {
    private Web Web;
    private WebForm WebForm;
    [Parameter]
    public int Id { get; set; }

    protected override async Task OnInitializedAsync()
    {
        var responseHTTP = await repository.GetAsync<Web>($"api/webs/{Id}");

        if (responseHTTP.Error)
        {
            if (responseHTTP.HttpResponseMessage.StatusCode == System.Net.HttpStatusCode.NotFound)
            {
                navigationManager.NavigateTo("webs");
            }
            else
            {
                var messageError = await responseHTTP.GetErrorMessageAsync();
                await swal.FireAsync("Error", messageError, SweetAlertIcon.Error);
            }
        }
        else
        {
            Web = responseHTTP.Response;
        }
    }

    private async Task Edit()
    {
        var responseHTTP = await repository.PutAsync("api/webs", Web);

        if (responseHTTP.Error)
        {
            var mensajeError = await responseHTTP.GetErrorMessageAsync();
            await swal.FireAsync("Error", mensajeError, SweetAlertIcon.Error);
        }
        else
        {
            WebForm!.FormPostedSuccessfully = true;
            navigationManager.NavigateTo("webs");
        }
    }

    private void Return()
    {
        navigationManager.NavigateTo("webs");
    }
}
